<big><center><%= link_to "Home", welcome_index_path %></center></big>
<big><center><%= link_to t('register_mining_type') , mining_types_path %></center></big>

<h1><%= t('coins')%></h1>

<center>
    <h1>
        <form>
            <label for @nome><%= t('name')%> </label><br>
            <input type="text" name=nome><br>
            <input type="submit" value="Salvar">
        </form>
    </h1>
</center>

<h2>
  <%=  t('wallet') %>  <%= " #{@nome} " %>
</h2>

<table>
  <thead>
    <tr>
      <th><%= t('table.description')%></th>
      <th><%= t('table.acronym')%></th>
      <th><%= t('table.image')%></th>
      <th><%= t('table.mining_type')%></th>
      <th><%= t('table.actions')%></th>
    </tr>
  </thead>
  <tbody>
    <% @coins.each do |coin| %>
      <tr id="<%= dom_id(coin) %>">
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, width: 50, height: 50 %></td>
        <td><%= coin.mining_type_id %></td>
        <td>
          <%= link_to t('links.show'), coin %> |
          <%= link_to t('links.edit'), edit_coin_path(coin) %> |
          <%= link_to t('links.delete'), coin, method: :delete%>
        </td>
        </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('links.new'), new_coin_path %>
